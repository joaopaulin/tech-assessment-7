{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/tests/*": [
        "../tests/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
